@model Ef_materiaux.Models.UserViewModel

@{
    ViewData["Title"] = "Connect";
}

<div id="home">
    <div class="container">
        <div class="home-wrap">
            <br>
            <br>
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <form asp-action="Connect">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Identifant" class="control-label"></label>
                            <input asp-for="Identifant" class="form-control" />
                            <span asp-validation-for="Identifant" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MotDePasse" class="control-label"></label>
                            <input asp-for="MotDePasse" class="form-control" />
                            <span asp-validation-for="MotDePasse" class="text-danger"></span>
                        </div>
                        <span class="button-checkbox">
                            <button type="button" class="btn" data-color="info">Se souvenir de moi</button>
                            <input type="checkbox" name="remember_me" id="remember_me" checked="checked" class="hidden">
                            <a asp-area="" asp-controller="Home" asp-action="Password" class="btn btn-link pull-right">Mot de passe oublié</a>
                        </span>
                        <div class="form-group">
                            <input asp-area="" asp-controller="Home" asp-action="Connect" type="submit" value="Se connecter" class="btn btn-lg btn-success btn-block" />
                        </div>
                        <div class="form-group">
                            <input asp-area="" asp-controller="Home" asp-action="Register" type="submit" value="S'inscrire" class="btn btn-lg btn-primary btn-block" />
                        </div>
                    </form>
                </div>
                <div class="col-md-4">
                </div>
            </div>
        </div>
        </div>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

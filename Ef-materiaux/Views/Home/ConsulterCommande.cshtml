@model IEnumerable<Ef_materiaux.Models.CommandeViewModel>

@{
    ViewData["Title"] = "ConsulterCommande";
}

<div class="container">
    <div class="home-wrap">
        <br>
        <br>
        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-6">

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NumeroCommande)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateCommande)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Produit.NomProduit)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Produit.NumeroProduit)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Produit.Quantite)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Produit.Prix)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumeroCommande)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateCommande)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Produit.NomProduit)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Produit.NumeroProduit)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Produit.Quantite)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Produit.Prix)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br>
                <br> <br>
                <br> <br>
                <br> <br>
                <br>
            </div>

        </div>
        </div>
    </div>
